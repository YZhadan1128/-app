
.banner {
	height: 360rpx;
	overflow: hidden;
	position: relative;
	background-color: #ccc;
}
.banner-img {
	width: 100%;
	-webkit-filter: blur(70px);
	        filter: blur(70px);
}
.banner-title {
	max-height: 84rpx;
	overflow: hidden;
	position: absolute;
	top: 50rpx;
	
	width: 90%;
	font-size: 32rpx;
	font-weight: 400;
	line-height: 42rpx;
	color: white;
	z-index: 11;
}
.banner-description {
	position: absolute;
	bottom: 32rpx;
	overflow: hidden;
	max-height: 87rpx;
}

